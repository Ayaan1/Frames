<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="preferences">

    <PreferenceCategory
            android:key="ui_preferences"
            android:title="@string/ui_pref_title">

        <Preference
                android:key="theme"
                android:persistent="true"
                android:summary="@string/themes_pref_summary"
                android:title="@string/themes_pref_title"/>

        <SwitchPreference
                android:defaultValue="true"
                android:key="color_navbar"
                android:persistent="true"
                android:summary="@string/colored_navbar_pref_summary"
                android:title="@string/colored_navbar_pref_title"/>

        <Preference
                android:key="columns"
                android:persistent="true"
                android:summary="@string/columns_pref_summary"
                android:title="@string/columns_pref_title"/>

        <SwitchPreference
                android:defaultValue="true"
                android:key="instagram_double_tap"
                android:persistent="true"
                android:summary="@string/instagram_double_tap_pref_summary"
                android:title="@string/instagram_double_tap_pref_title"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/storage_pref_title">

        <!--
        <SwitchPreference
                android:key="lowDataUsage"
                android:persistent="true"
                android:defaultValue="true"
                android:title="@string/low_data_usage_pref_title"
                android:summary="@string/low_data_usage_pref_summary"/>
                -->

        <Preference
                android:key="clear_data"
                android:persistent="true"
                android:summary="@string/cache_pref_summary"
                android:title="@string/cache_pref_title"/>

        <Preference
                android:key="clear_database"
                android:persistent="true"
                android:summary="@string/database_pref_summary"
                android:title="@string/database_pref_title"/>

        <Preference
                android:key="wallpapers_save_location"
                android:persistent="true"
                android:summary="@string/wsl_pref_summary"
                android:title="@string/wsl_pref_title"/>

    </PreferenceCategory>

</PreferenceScreen>