<resources>

    <style name="Toolbar.Popup.AppCompat.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Toolbar.Popup.AppCompat.Dark" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="Toolbar.AppCompat.Responsive.Light" parent="AppTheme.Light">
        <item name="android:textColor">#de000000</item>
        <item name="android:textColorPrimary">#de000000</item>
        <item name="android:textColorSecondary">#8a000000</item>
        <item name="colorControlHighlight">#8a000000</item>
    </style>

    <style name="Toolbar.AppCompat.Responsive.Dark" parent="AppTheme.Dark">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#b3ffffff</item>
        <item name="colorControlHighlight">#b3ffffff</item>
    </style>

    <style name="Responsive.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Responsive.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Responsive.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Responsive.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
    </style>

    <style name="Responsive.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/cards_spacing</item>
        <item name="android:paddingRight">@dimen/cards_spacing</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AboutContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_little_margin</item>
        <item name="android:paddingRight">@dimen/card_little_margin</item>
        <item name="android:paddingTop">@dimen/cards_spacing</item>
        <item name="android:paddingBottom">@dimen/cards_spacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListsContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/card_little_margin</item>
        <item name="android:paddingRight">@dimen/card_little_margin</item>
        <item name="android:paddingTop">@dimen/card_little_margin</item>
        <item name="android:paddingBottom">@dimen/card_little_margin</item>
    </style>

    <style name="ToolbarTitleWithShadow" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/gradient_black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ToolbarSubtitleWithShadow" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@color/gradient_black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="RectangularImageView">
        <attr name="heightDivider" format="integer"/>
    </declare-styleable>

</resources>